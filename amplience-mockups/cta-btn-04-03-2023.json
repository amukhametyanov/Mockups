{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://sportinglife.ca/cta-button",
    "$comment": "Docs: https://amplience.com/docs/development/schema-examples/partials/simple-partial.html",
    "title": "CTA Button",
    "type": "object",
    "properties": {
        "cta": {
            "type": "object",
            "title": "CTA Link",
            "properties": {
                  
                        "value": {
                            "title": "Button URL",
                            "description": "If you use URL syntax, then wrap the link with quotation marks ('')",
                            "type": "string"
                        }, 
                        
                        "label": {
                            "title": "Button Title",
                            "description": "Text displayed on button",
                            "type": "string"
                        },
                        "linkTarget": {
                            "title": "Link Target",
                            "description": "Enable (Force open link in new tab)",
                            "type": "boolean"
                        }
                        
                        
            }
        }
    }
}